{
  "name": "@opuscapita/opuscapita-ui",
  "version": "1.0.2-beta.2",
  "description": "OpusCapita UI resources",
  "scripts": {
    "start": "nodemon --watch src/server src/server --exec babel-node --presets es2015,stage-0",
    "lint": "eslint src",
    "application-build": "rimraf dist/application && babel --copy-files --no-babelrc --presets es2015,stage-0 --plugins lodash --ignore *.spec.js src/server --out-dir dist/application/server && cp -R src/client dist/application",
    "npm-client-build": "rimraf dist && lessc --relative-urls src/client/resources/less/main.less src/client/main.css && cp -R src/client dist && sh demo-resources-path.sh",
    "publish-release": "npm run npm-client-build && npm-publish --release",
    "build-less": "lessc --relative-urls src/client/resources/less/main.less src/client/main.css",
    "grails-plugin-build": "rimraf dist && lessc --relative-urls src/client/resources/less/main.less src/client/main.css && cp -R src/client dist && sh grails-resources-path.sh",
    "grails-plugin-package": "npm run grails-plugin-build && grails-plugin-package",
    "grails-plugin-install": "npm run grails-plugin-package && grails-plugin-install",
    "grails-plugin-deploy": "npm run grails-plugin-package && grails-plugin-deploy",
    "grails-plugin-deploy-release": "npm run grails-plugin-package -- --release && grails-plugin-deploy --release"
  },
  "author": {
    "name": "Sergey Tamkov",
    "email": "sergey.tamkov@jcatalog.com"
  },
  "files": [
    "dist"
  ],
  "main": "dist/main.css",
  "repository": "OpusCapita/opuscapita-ui",
  "license": "Apache-2.0",
  "readme": "README.md",
  "dependencies": {
    "chokidar": "1.6.1",
    "cors": "2.8.1",
    "express": "4.14.0",
    "fs-extra": "1.0.0",
    "less": "2.7.2",
    "lodash": "4.17.4",
    "rimraf": "2.5.4"
  },
  "devDependencies": {
    "@opuscapita/npm-scripts": "1.0.8",
    "babel-cli": "6.18.0",
    "babel-core": "6.20.0",
    "babel-eslint": "7.1.1",
    "babel-plugin-lodash": "3.2.11",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-stage-0": "6.16.0",
    "eslint": "3.12.2",
    "eslint-config-opuscapita": "1.0.7",
    "eslint-plugin-react": "6.8.0",
    "nodemon": "1.11.0"
  },
  "grails": {
    "groupId": "com.jcatalog.grailsplugins",
    "buildDir": "dist",
    "resources": {
      "opuscapita-ui": {
        "files": {
          "main.css": "css/main.css"
        }
      }
    },
    "standaloneFiles": {
      "resources": "web-app"
    }
  }
}
